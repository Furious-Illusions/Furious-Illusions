<script>
        $(document).ready(function () {
            $(".frame").click(function (event) {
                event.preventDefault();

                $("#frameVid").attr("src", $(this).attr("href"));

                $("#frameVid").css("display", "block");
            });
        });
</script>

<h2>Our Movies</h2>
<table>
    @foreach (Movie m in bsObj)
    {

        <tr>
            <td><b>Title: </b></td>
            <td>@m.Title</td>
        </tr>
        <tr>
            <td><b>Duration: </b></td>
            <td>@m.Duration</td>
        </tr>
        <tr>
            <td><b>Kijkwijzer: </b></td>
